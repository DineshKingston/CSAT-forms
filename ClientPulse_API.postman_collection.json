{
    "info": {
        "_postman_id": "clientpulse-collection",
        "name": "ClientPulse - CSAT API",
        "description": "Complete API collection for ClientPulse CSAT feedback system",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Public Feedback API",
            "item": [
                {
                    "name": "Submit Feedback (No Screenshot)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "John Doe",
                                    "type": "text"
                                },
                                {
                                    "key": "email",
                                    "value": "john@example.com",
                                    "type": "text"
                                },
                                {
                                    "key": "rating",
                                    "value": "5",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "Excellent service! Very satisfied with the product.",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/feedback/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "feedback",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Submit Feedback (With Screenshot)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "Jane Smith",
                                    "type": "text"
                                },
                                {
                                    "key": "email",
                                    "value": "jane@example.com",
                                    "type": "text"
                                },
                                {
                                    "key": "rating",
                                    "value": "3",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "Found a bug in the checkout process. See screenshot.",
                                    "type": "text"
                                },
                                {
                                    "key": "screenshot",
                                    "type": "file",
                                    "src": "/path/to/screenshot.png"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/feedback/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "feedback",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Get Feedback by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/feedback/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "feedback",
                                "1"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin Authentication",
            "item": [
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\\"username\\": \\"admin\\",\\"email\\": \\"admin@clientpulse.com\\",\\"password\\": \\"SecurePassword123!\\"}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Admin Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\\"access_token\\", jsonData.access_token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\\"username\\": \\"admin\\",\\"password\\": \\"SecurePassword123!\\"}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Analytics (Protected)",
            "item": [
                {
                    "name": "Get Analytics Report",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/analytics/reports",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "analytics",
                                "reports"
                            ]
                        }
                    }
                },
                {
                    "name": "Download Report (CSV)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/analytics/download?format=csv",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "analytics",
                                "download"
                            ],
                            "query": [
                                {
                                    "key": "format",
                                    "value": "csv"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Download Report (JSON)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/analytics/download?format=json",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "analytics",
                                "download"
                            ],
                            "query": [
                                {
                                    "key": "format",
                                    "value": "json"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health & Info",
